<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akakanch.documents2docs.documents2docs.ThumbnailActivity">

    <ImageView
        android:id="@+id/imageView_thumbnail"
        android:layout_width="257dp"
        android:layout_height="249dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/colorButtonNormal"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button_process"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="23dp"
        android:width="1dp"
        android:color="#FFFFFF"
        android:text="Preview Segments"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_test" />

    <TextView
        android:id="@+id/textView_test"
        android:layout_width="332dp"
        android:layout_height="118dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="19dp"
        android:fontFamily="monospace"
        android:gravity="fill_vertical"
        android:text="Which options do you want to perform?"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_thumbnail" />

    <Button
        android:id="@+id/button_gettext"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="23dp"
        android:text="Get Text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/button_process"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_test" />

</android.support.constraint.ConstraintLayout>
